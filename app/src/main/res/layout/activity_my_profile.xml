<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_blue_color"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="395dp"
                android:layout_height="101dp">

                <ImageView
                    android:id="@+id/imageView96"
                    android:layout_width="52dp"
                    android:layout_height="53dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/arrow" />

                <TextView
                    android:id="@+id/textView89"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="32dp"
                    android:text="My Profile"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView96"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/moree"
                    tools:layout_editor_absoluteX="274dp"
                    tools:layout_editor_absoluteY="7dp" />

                <ImageView
                    android:id="@+id/imageView102"
                    android:layout_width="57dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/dots" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView114"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/signupcontainer" />

                <ImageView
                    android:id="@+id/imageView115"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="@+id/imageView114"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/remdp" />

                <ImageView
                    android:id="@+id/imageView117"
                    android:layout_width="33dp"
                    android:layout_height="27dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView114"
                    app:layout_constraintStart_toEndOf="@+id/imageView115"
                    app:srcCompat="@drawable/pen" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView92"
                    android:layout_width="42dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="16dp"
                    android:text="Ali"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Islamabad"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView109"
                    app:layout_constraintTop_toBottomOf="@+id/textView92" />

                <ImageView
                    android:id="@+id/imageView109"
                    android:layout_width="35dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView92"
                    app:srcCompat="@drawable/gloc" />

                <ImageView
                    android:id="@+id/imageView110"
                    android:layout_width="128dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView93"
                    app:srcCompat="@drawable/bs" />

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Favourite Mentors"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView110" />


                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView94">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cooper_card1"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            android:background="#DADADA"
                            android:outlineSpotShadowColor="#ACC0C0"
                            android:padding="5dp"
                            app:cardBackgroundColor="#DADADA"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="301dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="85dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="125dp"
                                android:background="#DADADA"
                                android:outlineSpotShadowColor="#ACC0C0"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="4dp"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="301dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textView20"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:text="John Cooper"
                                            android:textColor="@color/black"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/textView22"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="UX Designer @ Google"
                                            android:textColor="@color/black"
                                            android:textSize="10dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">


                                            <ImageView
                                                android:id="@+id/imageView4"
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="15dp"
                                                app:srcCompat="@drawable/green" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:text="Available"
                                                android:textColor="#00FF00"
                                                android:textSize="10dp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingTop="20dp"
                                            android:text="$1500/Session"
                                            android:textColor="@android:color/holo_orange_light"
                                            android:textSize="8dp" />

                                        <ImageView
                                            android:id="@+id/imageView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="12dp"
                                            android:layout_marginBottom="20dp"
                                            android:layout_weight="1"
                                            app:srcCompat="@drawable/heart" />

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            android:background="#DADADA"
                            android:outlineSpotShadowColor="#ACC0C0"
                            app:cardBackgroundColor="#DADADA"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="301dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="85dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="125dp"
                                android:background="#DADADA"
                                android:outlineSpotShadowColor="#ACC0C0"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="4dp"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="301dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:text="John Cooper"
                                            android:textColor="@color/black"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="UX Designer @ Google"
                                            android:textColor="@color/black"
                                            android:textSize="10dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">


                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="15dp"
                                                app:srcCompat="@drawable/grey" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:text="Not Available"
                                                android:textColor="#D2D2D2"
                                                android:textSize="10dp" />

                                        </LinearLayout>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingTop="20dp"
                                            android:text="$1500/Session"
                                            android:textColor="@android:color/holo_orange_light"
                                            android:textSize="8dp" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="12dp"
                                            android:layout_marginBottom="20dp"
                                            android:layout_weight="1"
                                            app:srcCompat="@drawable/grey_heart" />

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_margin="12dp"
                            android:background="#DADADA"
                            android:outlineSpotShadowColor="#ACC0C0"
                            app:cardBackgroundColor="#DADADA"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="4dp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="301dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="85dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="125dp"
                                android:background="#DADADA"
                                android:outlineSpotShadowColor="#ACC0C0"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="30dp"
                                app:cardElevation="4dp"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="301dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:weightSum="3">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:layout_marginTop="5dp"
                                            android:text="John Cooper"
                                            android:textColor="@color/black"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="15dp"
                                            android:text="UX Designer @ Google"
                                            android:textColor="@color/black"
                                            android:textSize="10dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">


                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginLeft="15dp"
                                                app:srcCompat="@drawable/grey" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:text="Not Available"
                                                android:textColor="#D2D2D2"
                                                android:textSize="10dp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingTop="20dp"
                                            android:text="$1500/Session"
                                            android:textColor="@android:color/holo_orange_light"
                                            android:textSize="8dp" />

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="12dp"
                                            android:layout_marginBottom="20dp"
                                            android:layout_weight="1"
                                            app:srcCompat="@drawable/grey_heart" />

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/dark_blue_color"
            android:orientation="horizontal"
            android:paddingVertical="27dp"
            android:paddingTop="12dp"
            android:weightSum="5">

            <LinearLayout
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/grey_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="19dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/grey_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/post_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                android:paddingHorizontal="15dp">

                <ImageView
                    android:id="@+id/postImage"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/plus" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/white_chat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textAlignment="center"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/grey_user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>